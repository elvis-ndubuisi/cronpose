{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:base"],
	"packageRules": [
		{
			"matchPackageNames": ["*"],
			"automerge": false,
			"schedule": ["after 9pm on Tuesdays"],
			"labels": ["dependencies"]
		}
	],
	"schedule": ["after 9pm on Saturdays"],
	"platformAutomerge": false,
	"lockFileMaintenance": {
		"enabled": false
	}
}
